@{
    int index = 1;
}
@model List<Project>

<a asp-action="Add" asp-controller="pojectTaghelpers">Add Project</a>
<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Location</th>
            <th>Department Name</th>
            <th>Edit</th>
            @*<th>Delete</th>*@

        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {

            <tr>
                <td>@(index++)</td>
                <td>@project.Name</td>
                <td>@project.Location</td>
                <td>@project.Department.Name</td>
                <td><a asp-action="Edit" asp-controller="pojectTaghelpers" asp-route-id="@project.Number">Edit</a></td>
                <td><a asp-action="Delete" asp-controller="pojectTaghelpers" asp-route-id="@project.Number">Delete</a></td>
            </tr>
        }
    </tbody>
</table>